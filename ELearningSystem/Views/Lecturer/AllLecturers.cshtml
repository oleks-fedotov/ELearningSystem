@model List<ELearningSystem.Models.LecturerModel>

@{
    ViewBag.Title = "Our lecturers";
}

<h2>Our lecturers</h2>

<div class="col-sm-10">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <div class="pull-left h4">
                    @Html.Label(Model[i].Name + " " + Model[i].Surname)
                </div>
                <div class="pull-right h4">
                    <label class="@(Model[i].AcademicStatus ? "btn btn-success" : "btn btn-info")">
                        @if(Model[i].AcademicStatus)
                        { 
                            <span class="glyphicon glyphicon-ok"></span>
                        }
                        else
                        {
                            <span class="glyphicon glyphicon-remove"></span>
                        }
                        &nbsp Academic status
                    </label>
                </div>
            </div>
            <div class="panel-body">
                @if (Model[i].Interests != null && Model[i].Interests.Length > 0)
                {
                    <h4>Interests</h4>
                    <p>@Model[i].Interests</p>
                    <hr />
                }
                @if (Model[i].Information != null && Model[i].Information.Length > 0)
                {
                    <h4>Information</h4>
                    <p>@Model[i].Information</p>
                }
            </div>
            @*            <div class="panel-footer clearfix">
                <div class="pull-left">
                    @Html.ActionLink("Learn more »", "CourseDetails", "Course", new { courseId = Model[i].CourseId }, new { @class = "btn btn-primary" })
                </div>
                <div class="pull-right">
                    @Html.Label(Model[i].Category, new { name = "categoryName", @class = "btn btn-default" })
                    @Html.Label("Type: " + Model[i].CourseType, new { name = "courseType", @class = Model[i].CourseType == "public" ? "btn btn-success" : "btn btn-info" })
                </div>
            </div>*@
        </div>
    }
</div>
