@model Domain.Course


<div class="form-horizontal form-group text-center">
    <h2>Course creation</h2>
    <br />
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.LecturerId)        
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.Label("Course name", new { @class = "col-sm-4 control-label col-sm-offset-3" })
            <div class="col-sm-5">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Category", new { @class = "col-sm-4 control-label col-sm-offset-3" })
            <div class="col-sm-5">
                @Html.DropDownListFor(x => x.CategoryId, (SelectList)ViewBag.Categories, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("End date(not required)", new { @class = "col-sm-4 control-label col-sm-offset-3" })
            <div class="col-sm-5">
                @Html.TextBoxFor(x => x.EndDate, new { @class ="form-control", type="date"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Complexity level(1-10)", new { @class = "col-sm-4 control-label col-sm-offset-3" })
            <div class="col-sm-5">
                @Html.TextBoxFor(x => x.ComplexityLevel, new { @class="form-control", type ="number"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Course type", new { @class = "col-sm-4 control-label col-sm-offset-3" })
            <div class="col-sm-5">
                @Html.DropDownListFor(x => x.CourseTypeId, (SelectList)ViewBag.CourseTypes, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Recommended background", new { @class = "col-sm-5 control-label col-sm-offset-2" })
            <div class="col-sm-5">
                @Html.TextAreaFor(x => x.RequiredSkills, new { @class = "form-control", rows = "7"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Desciption", new { @class = "col-sm-4 control-label col-sm-offset-3" })
            <div class="col-sm-5">
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = "7"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Table of content", new { @class = "col-sm-4 control-label col-sm-offset-3" })
            <div class="col-sm-5">
                @Html.TextAreaFor(x => x.CourseContent, new { @class = "form-control", rows = "7"})
            </div>
        </div>
        <input type="submit" value="Create" class="btn btn-primary"/>
    }
</div>
