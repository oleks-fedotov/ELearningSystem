@model ELearningSystem.Models.Topic

@{
    ViewBag.Title = "Index";
}

<div>
    <div class="form-inline">
        <div class="form-group">
            @using (Html.BeginForm("EditCourse", "Course", new { courseId = Model.CourseId }, FormMethod.Post, null))
            {
                <div>
                    <button type="submit" class="btn">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        Back
                    </button>
                </div>
            }
        </div>
        <div class="form-group">
            <div class="col-sm-12 col-sm-offset-1">
                <h2>@Model.CourseName - @Model.TopicName</h2>
            </div>
        </div>
    </div>
    <legend>
        <div class="col-sm-12 col-sm-offset-1">
            <div class="form-inline">
                <div class="form-group">
                    <h3>Lectures</h3>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1">
                        @using (Html.BeginForm("CreateLecture", "Lecture", new { topicId = @Model.ID }, FormMethod.Post, new { @class = "form-group" }))
                        {
                            <input type="submit" value="Add lecture" class="form-control" />
                        }
                    </div>
                </div>
            </div>
            @if (Model.Lectures.Count > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Lecture</th>
                            <th>Homework</th>
                        </tr>
                    </thead>
                    @foreach (var lecture in Model.Lectures)
                    {
                        Html.RenderPartial("LectureSummary", lecture);
                    }
                </table>
            }
            else
            {

            }
        </div>
    </legend>
</div>
